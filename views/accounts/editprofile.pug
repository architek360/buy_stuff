extends ../layout

block content
  .row
    .col-lg-6.col-md-offset-3
      if message.length
        .alert.alert-success.text-center.message-padding
          =message
      h1.text-center Edit Profile
      hr
      form(method='POST')
        .form-group
          label(for='name') Name
          input.form-control(type='text', name='name', value=user.profile.name, autofocus='true')
        .form-group
          label(for='address') Address
          input.form-control(type='test', name='address', value=user.address) 
        .form-group
          button.btn.btn-primary(type='submit') Submit Changes
      a.btn.btn-default(href='/profile') Return to Profile